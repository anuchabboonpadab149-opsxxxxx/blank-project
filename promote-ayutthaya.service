[Unit]
Description=Social distribution daemon (24/7) for multi-platform posting and analytics
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/promote-ayutthaya
Environment=PYTHONUNBUFFERED=1
Environment=RUN_MODE=daemon
Environment=TIMEZONE=Asia/Bangkok
# Content generator
Environment=GENERATE_CONTENT=true
Environment=SENDER_NAME=Bee&Bell
# Live promotion
Environment=LIVE_PROMO_MODE=true
Environment=LIVE_LINK=https://vt.tiktok.com/ZSHWWv19QQTPo-eKZtG/
# Ads: enabled (real) â€” set ADS_SIMULATION=true for dry-run without cost
Environment=ENABLE_ADS=true
Environment=ADS_SIMULATION=false
# Posting triggers
Environment=POST_INTERVAL_SECONDS=30
# Collecting triggers
Environment=COLLECT_INTERVAL_MINUTES=2
# Providers to enable
Environment=PROVIDERS=twitter,facebook,linkedin,line,telegram,discord,instagram,reddit,tiktok
ExecStart=/usr/bin/python3 /opt/promote-ayutthaya/cli.py
Restart=always
RestartSec=10
User=ubuntu

[Install]
WantedBy=multi-user.target