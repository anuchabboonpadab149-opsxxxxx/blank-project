# X (Twitter) API credentials
TW_CONSUMER_KEY=YOUR_CONSUMER_KEY
TW_CONSUMER_SECRET=YOUR_CONSUMER_SECRET
TW_ACCESS_TOKEN=YOUR_ACCESS_TOKEN
TW_ACCESS_TOKEN_SECRET=YOUR_ACCESS_TOKEN_SECRET
TW_BEARER_TOKEN=YOUR_BEARER_TOKEN  # optional: for metrics collection (v2)

# Facebook
FB_PAGE_ID=
FB_ACCESS_TOKEN=

# LinkedIn
LI_ACCESS_TOKEN=
LI_ORG_URN=urn:li:organization:123456

# LINE
LINE_CHANNEL_ACCESS_TOKEN=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=@yourchannel

# Discord
DISCORD_WEBHOOK_URL=

# Mastodon
MASTODON_BASE_URL=
MASTODON_ACCESS_TOKEN=

# Instagram (Graph API - requires media)
IG_USER_ID=
IG_IMAGE_URL=                  # image URL to upload with caption (IG requires media)

# Reddit (script app)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_SUBREDDIT=              # e.g., Thailand

# TikTok Business (Ads placeholder)
TIKTOK_APP_ID=
TIKTOK_SECRET=
TIKTOK_ADVERTISER_ID=

# Twitter Ads account details
ADS_ACCOUNT_ID=YOUR_ADS_ACCOUNT_ID
FUNDING_INSTRUMENT_ID=YOUR_FUNDING_INSTRUMENT_ID
CAMPAIGN_ID=                   # optional: leave blank to create a new campaign
LINE_ITEM_ID=                  # optional: reuse an existing line item ID
ENABLE_ADS=true                # enable promotion flow
ADS_SIMULATION=false           # real Ads; set to true to simulate without cost

# Content generation (auto captions with Bee&Bell persona)
CONTENT_MODE=generate          # auto | generate | file | import
SENDER_NAME=Bee&Bell

# Tweet content (Thai) OR use tweets.txt rotation or external import
TWEET_TEXT=
TWEETS_FILE=tweets.txt
IMPORT_SOURCE_URL=             # optional: external URL source
IMPORT_FORMAT=lines            # "lines" (default) or "json"

# Providers to distribute to (comma-separated)
PROVIDERS=twitter,facebook,linkedin,line,telegram,discord,instagram,reddit,tiktok,mastodon
DISTRIBUTE_ALL=true

# Delivery and bidding
DAILY_BUDGET_MICRO=5000000     # 5.00 in local currency (micro means *1e6)
TOTAL_BUDGET_MICRO=35000000    # 35.00 total budget
BID_AMOUNT_MICRO=500000        # 0.50 bid
OBJECTIVE=TWEET_ENGAGEMENTS
PLACEMENT=ALL_ON_TWITTER

# Geo targeting for Ads (set for Thailand-wide or specific region)
GEO_COUNTRY_CODE=TH
GEO_ALL_REGIONS=true           # true to target all regions (provinces) in the country
GEO_REGION_QUERY=              # set to a specific province name to target only that region

# Scheduler settings (24/7 operation)
RUN_MODE=daemon
TIMEZONE=Asia/Bangkok
WEB_DASHBOARD=true
WEB_PORT=8000

# Posting triggers (use either/both)
POST_INTERVAL_SECONDS=1        # per-second posting
# POST_CRON=*/1 * * * * *      # per-second cron (disabled by default)

# Collecting triggers (use either/both)
COLLECT_INTERVAL_MINUTES=1
# COLLECT_CRON=0 * * * * *     # per-minute cron (disabled by default)

# Ads Analytics (optional)
ADS_ENTITY_TYPE=LINE_ITEM      # LINE_ITEM, PROMOTED_TWEET, CAMPAIGN
ADS_ENTITY_IDS=                # comma-separated IDs or use ADS_ENTITY_FILE
ADS_ENTITY_FILE=ads_entities.txt
ADS_GRANULARITY=HOUR
ADS_START_TIME=                # ISO8601, e.g., 2025-10-01T00:00:00Z
ADS_END_TIME=
ADS_METRIC_GROUPS=ENGAGEMENT