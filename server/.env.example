# Select payment provider: "stripe" or "scb"
PAY_PROVIDER=stripe

# Stripe API keys (use live keys in production)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxx

# SCB Payment Gateway / Open API (fill when PAY_PROVIDER=scb)
# OAuth
SCB_OAUTH_URL=https://api-scb.example.com/oauth/token
SCB_CLIENT_ID=your_scb_client_id
SCB_CLIENT_SECRET=your_scb_client_secret

# Create QR code (dynamic)
SCB_QR_CREATE_URL=https://api-scb.example.com/payment/qrcode/create

# Check bill payment status (PromptPay Bill Payment)
SCB_CHECK_BILLPAY_URL=https://api-scb.example.com/payment/billpayment/check

# Merchant info (as required by SCB)
SCB_MERCHANT_ID=your_merchant_id
SCB_TERMINAL_ID=your_terminal_id
SCB_BILLER_ID=your_biller_id

# Webhook verification secret (used to verify SCB webhook)
SCB_WEBHOOK_SECRET=change_this_scb_webhook_secret

# JWT secret for user tokens
JWT_SECRET=change_this_jwt_secret

# Server listening port
PORT=3000

# Allowed CORS origin (your frontend URL), e.g., https://your-frontend.com
CORS_ORIGIN=http://localhost:5173